---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import heroimg from '../components/img/Heroimg1.jpg'
import heroimg2 from '../components/img/Heroimg2.jpg'
import founderimg from '../components/img/founderimg.jpg'

import show1 from '../components/img/show1.jpg'
import show2 from '../components/img/show2.jpg'
import show3 from '../components/img/show3.jpg'
import homestyle from '../styles/homestyle.css'
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="heroimg">
				<img src={heroimg.src}>
				<img src={heroimg2.src}>
			</div>
			<div class="heroMessage">
				<h1 class="heroMainMessage">Comedy is simply a funny way of being serious.</h1>
				
			</div>
			<div class="aboutUscontainer">
				<img class="aboutimg" src={founderimg.src} alt="founder image">
				<h1 class="aboutHeader">About Us</h1>
				<p class="aboutParagraph">Comedian is a comedy club that has been in business for over 20 years. We have hosted some of the best comedians in the world and have a reputation for providing a great night out. Our club is located in the heart of the city and is easily accessible by public transport. We have a fully stocked bar and a great selection of food to choose from. So come on down and have a laugh with us!</p>
			</div>
			<div class="cardContainer">
				<div class="card">
					<div class="card-image">
					  <img src={show1.src} alt="">
					</div>
					<div class="card-content">
					  <h2 class="card-title">Ryan Carter</h2>
					  <p class="card-text">Harrisburg Town Hall</p>
					  <h3>11:30 AM</h3>
					  
					</div>
				  </div>
				  <div class="card">
					<div class="card-image">
					  <img src={show2.src} alt="">
					</div>
					<div class="card-content">
					  <h2 class="card-title">Jake Lawson</h2>
					  <p class="card-text">Harrisburg Town Hall</p>
					  <h3>10:30 AM</h3>
					  
					</div>
				  </div>
				  <div class="card">
					<div class="card-image">
					  <img src={show3.src} alt="">
					</div>
					<div class="card-content">
					  <h2 class="card-title">Ethan Brooks</h2>
					  <p class="card-text">Harrisburg Town Hall</p>
					  <h3>9:00 PM</h3>
					  
					</div>
				  </div>
			</div>
			
		</main>
		<Footer />
	</body>
	<style>
		.heroimg {
			display: grid;
			grid-template-columns: 1fr 1fr;
			place-items: center;
			position: relative;
		}
		.heroimg img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}
		.heroparagraph {
			font-size: 1.5rem;
			margin-top: -2rem;
			color: #3B3B3B;
		}
		.heroMainMessage {
			text-align: center;
			font-size: 4rem;
			color: #232323;
			min
		}
		.aboutUscontainer {
			display: grid;
			grid-template-columns: 1fr 1fr;
			grid-template-rows: 100px 500px;
			margin-top: 2rem;
		}
		.aboutimg {
			width: 100%;
			height: 100%;
			object-fit: cover;
			grid-row: 1 / 3	;
		}
		.aboutHeader {
			font-size: 2rem;
			color: #232323;
		}
		.aboutParagraph {
			font-size: 1.5rem;
			color: #3B3B3B;
		}
		.cardContainer {
			display: flex;
			justify-content: center;
			gap: 2rem;
			margin: 3rem;
		}
		.card {
     	 width: 100%;
     	 max-width: 350px;
     	background-color: white;
     	border-radius: 10px;
      	overflow: hidden;
      	box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      	transition: transform 0.3s ease, box-shadow 0.3s ease;
    	}

   		 .card:hover {
     	 transform: translateY(-5px);
    	  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
   		 }

   		 .card-image {
    	  width: 100%;
			height: 200px;
			background-color: #2c3e50;
			display: flex;
			justify-content: center;
			align-items: center;
			color: white;
			font-size: 1.2rem;
			}

			.card-content {
			padding: 20px;
			text-align: right;
			}

			.card-title {
			font-size: 1.5rem;
			font-weight: 600;
			margin-bottom: 10px;
			color: #333;
			}

			.card-text {
			font-size: 1rem;
			color: #666;
			line-height: 1.5;
			margin-bottom: 20px;
			}

   
		@media screen and (max-width: 768px) {
			.heroimg {
				grid-template-columns: 1fr;
			}
			.aboutUscontainer {
				grid-template-columns: 1fr;
				grid-template-rows: 100px 500px;
			}
			.aboutHeader{
				margin: 1rem;
			}
			.aboutParagraph {
				margin: 1rem;
			}
			.cardContainer {
				justify-content: center;
				flex-direction: column;
				
			}
		}

		
		
	</style>
</html>
