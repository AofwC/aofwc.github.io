---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import founderimg from '../components/img/founderimg.jpg'
import gal1 from '../components/img/gal5.jpg'
---
<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Comedian - Contact" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="container">
                <header class="header">
                    <h1>Contact Us</h1>
                    <p>Having concern or questions? Feel free to contact us</p>
                </header>
        
                <section class="map-section">
                    <h2>Where to find Us</h2>
                    <div class="map-placeholder" id="google-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d16203.35912621172!2d-76.80577604091678!3d40.303798531175396!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c8b8eda1f62263%3A0x458bfa296d11034b!2sCostco%20Wholesale!5e0!3m2!1sen!2sus!4v1741592747934!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </section>
        
                <section class="form-section">
                    <h2>Question(s)</h2>
                    <form id="contact-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First name</label>
                                <input type="text" class="form-control" id="firstName" required>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last name</label>
                                <input type="text" class="form-control" id="lastName" required>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="tel" class="form-control" id="phone">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="question">Question(s)</label>
                            <textarea class="form-control" id="question" required></textarea>
                        </div>
                        
                        <button type="submit" class="submit-btn">Submit</button>
                    </form>
                </section>
            </div>
        </main>
        <style>
           
    
            .container {
                max-width: 100%;
                margin: 0 auto;
                background-color: white;
            }
    
            .header {
                background-color: #42a5f5;
                color: #000;
                padding: 2rem;
                text-align: center;
            }
    
            .header h1 {
                font-size: 2rem;
                margin-bottom: 0.5rem;
            }
    
            .header p {
                font-size: 1rem;
                opacity: 0.9;
            }
    
            .map-section {
                padding: 2rem;
                text-align: center;
            }
    
            .map-section h2 {
                margin-bottom: 1.5rem;
                font-size: 1.5rem;
            }
    
            
    
            .form-section {
                padding: 2rem;
                max-width: 800px;
                margin: 0 auto;
            }
    
            .form-section h2 {
                margin-bottom: 1.5rem;
                font-size: 1.5rem;
                text-align: center;
            }
    
            .form-row {
                display: flex;
                gap: 1rem;
                margin-bottom: 1rem;
            }
    
            .form-group {
                flex: 1;
            }
    
            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
            }
    
            .form-control {
                width: 100%;
                padding: 0.8rem;
                border: none;
                background-color: #ddd;
                border-radius: 3px;
            }
    
            textarea.form-control {
                min-height: 150px;
                resize: vertical;
            }
    
            .submit-btn {
                display: block;
                background-color: #8ced6c;
                color: #000;
                border: none;
                padding: 0.8rem 2rem;
                font-size: 1rem;
                cursor: pointer;
                border-radius: 2rem;
                margin-left: auto;
                margin-top: 1rem;
            }
    
            /* Responsive styles */
            @media (max-width: 768px) {
                .form-row {
                    flex-direction: column;
                    gap: 1rem;
                }
                
                .map-placeholder {
                    width: 100%;
                }
            }
        </style>