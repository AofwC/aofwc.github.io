---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import founderimg from '../components/img/founderimg.jpg'
import gal1 from '../components/img/gal1.jpg'
import gal2 from '../components/img/gal2.jpg'
import gal3 from '../components/img/gal3.jpg'
import gal4 from '../components/img/gal4.jpg'
import heroimg from '../components/img/Heroimg1.jpg'
import heroimg2 from '../components/img/Heroimg2.jpg'
import gal5 from '../components/img/gal5.jpg'
import gal6 from '../components/img/gal6.jpg'
import gal7 from '../components/img/gal7.jpg'
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Comedian - Tickets" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="grid-container">
                <!-- Comedian 1 -->
                <a href="/jakelawson" class="comedian-card">
                    <img src={gal1.src}alt="Jake Lawson" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Jake Lawson</h2>
                </a>
                
                <!-- Comedian 2 -->
                <a href="ryan-carter.html" class="comedian-card">
                    <img src={founderimg.src}alt="Ryan Carter" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Ryan Carter</h2>
                </a>
                
                <!-- Comedian 3 -->
                <a href="max-bennett.html" class="comedian-card">
                    <img src={gal2.src}alt="Max Bennett" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Max Bennett</h2>
                </a>
                
                <!-- Comedian 4 -->
                <a href="ethan-brooks.html" class="comedian-card">
                    <img src={gal5.src} alt="Ethan Brooks" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Ethan Brooks</h2>
                </a>
                
                <!-- Comedian 5 -->
                <a href="alex-parker.html" class="comedian-card">
                    <img src={gal6.src} alt="Alex Parker" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Alex Parker</h2>
                </a>
                
                <!-- Comedian 6 -->
                <a href="sam-mitchell.html" class="comedian-card">
                    <img src={heroimg.src} alt="Sam Mitchell" class="comedian-image">
                    <div class="date">March 10, 2025</div>
                    <h2 class="name">Sam Mitchell</h2>
                </a>
            </div>
        </main>
        <style> 
        .grid-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 30px;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 50px;
        }
        
        .comedian-card {
            display: flex;
            flex-direction: column;
            text-decoration: none;
            color: inherit;
            transition: transform 0.3s ease;
        }
        
        .comedian-card:hover {
            transform: translateY(-5px);
        }
        
        .comedian-image {
            width: 100%;
            aspect-ratio: 1/1;
            object-fit: cover;
            margin-bottom: 10px;
        }
        
        .date {
            font-size: 1rem;
            color: #00AEFF;
            margin-bottom: 5px;
        }
        
        .name {
            font-size: 2rem;
            font-weight: bold;
            margin: 0;
            color: #000;
        }
        
        @media (max-width: 600px) {
            .grid-container {
                grid-template-columns: 1fr;
            }
        }
    </style>