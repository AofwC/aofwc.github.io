---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import founderimg from '../components/img/founderimg.jpg'
import gal1 from '../components/img/gal5.jpg'
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Comedian - Ethan Brooks" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="profile-header">
				<img src={gal1.src} alt="Comedian on stage" class="profile-image">
				<div class="profile-info">
					<h1 class="profile-name">Ethan Brooks</h1>
					<p class="profile-date">February 24, 2025</p>
					<p class="profile-location">Harrisburg PA, 18901</p>
				</div>
			</div>
			
			<!-- Date Selection Section -->
			<div class="date-selection">
				<h2 class="date-selection-title">Select your date</h2>
				
				<!-- Date Option 1 -->
				<a href="register.html" class="date-option">
					<div class="date-info">
						<span class="date-small">February 28, 2025</span>
						<span class="date-location">Harrisburg PA, 18901</span>
					</div>
					<div class="date-time">2:00 A.M.</div>
				</a>
				
				<!-- Date Option 2 -->
				<a href="register.html" class="date-option">
					<div class="date-info">
						<span class="date-small">February 24, 2025</span>
						<span class="date-location">Harrisburg PA, 18901</span>
					</div>
					<div class="date-time">8:00 P.M.</div>
				</a>
				
				<!-- Date Option 3 -->
				<a href="register.html" class="date-option">
					<div class="date-info">
						<span class="date-small">March 3, 2025</span>
						<span class="date-location">Harrisburg PA, 18901</span>
					</div>
					<div class="date-time">9:00 P.M.</div>
				</a>
				
				<!-- Date Option 4 -->
				<a href="register.html" class="date-option">
					<div class="date-info">
						<span class="date-small">March 4, 2025</span>
						<span class="date-location">Harrisburg PA, 18901</span>
					</div>
					<div class="date-time">9:00 A.M.</div>
				</a>
				
				<!-- Date Option 5 -->
				<a href="register.html" class="date-option">
					<div class="date-info">
						<span class="date-small">February 24, 2025</span>
						<span class="date-location">Harrisburg PA, 18901</span>
					</div>
					<div class="date-time">9:00 A.M.</div>
				</a>
			</div>
        </main>
		<style>
			
			.profile-header {
				
				width: 100%;
			}
			
			.profile-image {
				width: 100%;
				height: 400px;
				object-fit: cover;
			}
			
			.profile-info {
				
				bottom: 0;
				left: 0;
				right: 0;
				background-color: #4a90e2;
				color: white;
				padding: 20px;
			}
			
			.profile-name {
				font-size: 28px;
				font-weight: bold;
				margin: 0 0 5px 0;
			}
			
			.profile-date, .profile-location {
				margin: 5px 0;
				font-size: 16px;
			}
			
			.date-selection {
				padding: 30px 20px;
			}
			
			.date-selection-title {
				font-size: 24px;
				margin-bottom: 20px;
			}
			
			.date-option {
				display: flex;
				justify-content: space-between;
				align-items: center;
				background-color: #ffeb3b;
				margin-bottom: 15px;
				padding: 15px;
				cursor: pointer;
				transition: transform 0.2s ease;
				text-decoration: none;
				color: black;
			}
			
			.date-option:hover {
				transform: translateX(5px);
			}
			
			.date-info {
				display: flex;
				flex-direction: column;
			}
			
			.date-small {
				font-size: 1rem;
				margin-bottom: 5px;
			}

			.date-location {
				font-size: 1.5rem;
				font-weight: bold;
			}

			.date-time {
				font-size: 1.5rem;
				font-weight: bold;
			}
		</style>