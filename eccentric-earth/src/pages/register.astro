---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import founderimg from '../components/img/founderimg.jpg'
import gal1 from '../components/img/gal1.jpg'
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="profile-header">
				<img src={gal1.src} alt="Comedian on stage" class="profile-image">
				<div class="profile-info">
					<h1 class="profile-name">Jake Lawson</h1>
					<p class="profile-date">February 24, 2025</p>
					<p class="profile-location">Harrisburg PA, 18901</p>
				</div>
			</div>
			<form id="ticketForm">
                <div class="form-row">
                  <div class="form-group">
                    <label for="firstName">First name</label>
                    <input type="text" id="firstName" required>
                  </div>
                  <div class="form-group">
                    <label for="lastName">Last name</label>
                    <input type="text" id="lastName" required>
                  </div>
                </div>
                
                <div class="form-row">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" required>
                  </div>
                  <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" required>
                  </div>
                </div>
                
                <div class="form-group">
                  <label for="ticketAmount">Ticket Amount</label>
                  <input type="number" id="ticketAmount" min="1" value="1" required>
                </div>
                
                <div class="ticket-row">
                  <div class="price-container">
                    <span class="price">$<span id="totalPrice">9.99</span></span>
                  </div>
                  <button type="submit" class="buy-now">Buy Now</button>
                </div>
              </form>
			
        </main>
        <script>
            const ticketAmountInput = document.getElementById('ticketAmount');
            const totalPriceElement = document.getElementById('totalPrice');
            const ticketPrice = 9.99;
            
            
            ticketAmountInput.addEventListener('input', updatePrice);
            
            function updatePrice() {
              const ticketAmount = parseInt(ticketAmountInput.value) || 0;
              const total = (ticketAmount * ticketPrice).toFixed(2);
              totalPriceElement.textContent = total;
            }
            
            
            document.getElementById('ticketForm').addEventListener('submit', function(event) {
              event.preventDefault();
              const ticketAmount = parseInt(ticketAmountInput.value);
              const totalPrice = (ticketAmount * ticketPrice).toFixed(2);
              alert(`Purchase Summary:\nTickets: ${ticketAmount}\nTotal: $${totalPrice}`);
              
            });
          </script>
		<style>
			
			.profile-header {
				
				width: 100%;
			}
			
			.profile-image {
				width: 100%;
				height: 400px;
				object-fit: cover;
			}
			
			.profile-info {
				
				bottom: 0;
				left: 0;
				right: 0;
				background-color: #4a90e2;
				color: white;
				padding: 20px;
			}
			
			.profile-name {
				font-size: 28px;
				font-weight: bold;
				margin: 0 0 5px 0;
			}
			
			.profile-date, .profile-location {
				margin: 5px 0;
				font-size: 16px;
			}
			
			.date-selection {
				padding: 30px 20px;
			}
			
			.date-selection-title {
				font-size: 24px;
				margin-bottom: 20px;
			}
			
			.date-option {
				display: flex;
				justify-content: space-between;
				align-items: center;
				background-color: #ffeb3b;
				margin-bottom: 15px;
				padding: 15px;
				cursor: pointer;
				transition: transform 0.2s ease;
				text-decoration: none;
				color: black;
			}
			
			.date-option:hover {
				transform: translateX(5px);
			}
			
			.date-info {
				display: flex;
				flex-direction: column;
			}
			
			.date-small {
				font-size: 1rem;
				margin-bottom: 5px;
			}

			.date-location {
				font-size: 1.5rem;
				font-weight: bold;
			}

			.date-time {
				font-size: 1.5rem;
				font-weight: bold;
			}
            .form-row {
                margin: 20px;
        display: flex;
         flex-wrap: wrap;
        gap: 20px;
         margin-bottom: 20px;
    }
    .form-group {
      flex: 1 1 250px;
      margin-bottom: 15px;
      margin: 20px;
    }
    label {
      display: block;
      margin-bottom: 5px;
      font-weight: 500;
    }
    input {
      width: 100%;
      padding: 10px;
      background-color: #e6e6e6;
      border: none;
      border-radius: 4px;
      box-sizing: border-box;
    }
    input[type="number"] {
      width: 60px;
    }
    .ticket-row {
        margin: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 30px;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }
    .buy-now {
      background-color: #7deb68;
      color: black;
      border: none;
      border-radius: 20px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .buy-now:hover {
      background-color: #6dd659;
    }
    .price {
      font-size: 18px;
      font-weight: bold;
      margin-right: 10px;
    }
    
    /* Responsive styles */
    @media (max-width: 480px) {
      .form-row {
        flex-direction: column;
        gap: 10px;
      }
      .form-group {
        flex: 1 1 100%;
      }
      .ticket-row {
        flex-direction: column;
        align-items: flex-start;
      }
      .buy-now {
        align-self: flex-end;
      }
		</style>